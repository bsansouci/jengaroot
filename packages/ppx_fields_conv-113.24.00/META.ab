version = "$(pkg_version)"
description = "Generation of accessor and iteration functions for ocaml records"
requires(-ppx_driver) = "fieldslib ppx_core.for_ppx_deriving ppx_type_conv.for_ppx_deriving"
requires(ppx_driver) = "ppx_core ppx_type_conv"
archive(ppx_driver, byte          ) = "ppx_fields_conv.cma"
archive(ppx_driver, native        ) = "ppx_fields_conv.cmxa"
archive(ppx_driver, native, plugin) = "ppx_fields_conv.cmxs"
exists_if = "ppx_fields_conv.cma"
ppxopt(-ppx_driver) = "ppx_deriving,./ppx_fields_conv.cma"
